@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Assessment Tracker</title>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="squares-body">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="error-template">
					<h1>
						Oops!
					</h1>
					<div class="error-details">
						@(string.IsNullOrEmpty(@ViewBag.Message) ? "AN UNKNOWN ERROR HAS OCCURRED" : @ViewBag.Message)
					</div>
					<div class="error-actions">
						<a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
							<span class="fa fa-home"></span>
							Take Me Home
						</a><a href="mailto:ben.anderson@healthcatalyst.com?Subject=Assessment%20Tracker" class="btn btn-default btn-lg"><span class="fa fa-envelope-o"></span> Contact Support </a>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>
</html>